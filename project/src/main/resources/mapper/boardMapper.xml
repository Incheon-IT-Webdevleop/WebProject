	<!-- 게시글 목록 검색 필터 -->
	<select id="findAll" parameterType="com.korea.project.dto.board.BoardListRequest" resultType="com.korea.project.dto.board.BoardListResponse">
		SELECT B.BOARD_IDX,
			   B.BOARD_TITLE,
			   U.USER_NICKNAME,
			   B.BOARD_WRITE_DATE,
			   B.BOARD_VIEW
		FROM BOARD B
		JOIN `USER` U ON B.USER_IDX = U.user_idx
